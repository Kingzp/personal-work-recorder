<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/chokoapp.imanani"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/startTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="@string/start_time"
        android:textSize="16dp" />

    <chokoapp.imanani.DateTimeView
        android:id="@+id/startTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startTimeText"
        android:layout_below="@+id/startTimeText"
        android:padding="5dp"
        android:text="9999/99/99 00:00:00"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/endTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startTimeView"
        android:layout_below="@+id/startTimeView"
        android:padding="5dp"
        android:text="@string/end_time"
        android:textSize="16dp" />

    <chokoapp.imanani.DateTimeView
        android:id="@+id/endTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endTimeText"
        android:layout_below="@+id/endTimeText"
        android:padding="5dp"
        android:text="9999/99/99 00:00:00"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/recordSeparator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/endTimeView"
        android:layout_below="@+id/endTimeView"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_bright" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordSeparator"
        android:layout_alignLeft="@+id/endTimeView"
        android:padding="5dp"
        android:text="@string/daily_total"
        android:textSize="16dp" />

    <chokoapp.imanani.ManipulateButton
        android:id="@+id/startTimeDown"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_above="@+id/startTimeView"
        android:layout_alignRight="@+id/startTimeView"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/minus_button" />

    <chokoapp.imanani.ManipulateButton
        android:id="@+id/startTimeUp"
        style="@style/up_down_button_style"
        android:layout_above="@+id/startTimeView"
        android:layout_toLeftOf="@+id/startTimeDown"
        android:src="@drawable/plus_button" />

    <chokoapp.imanani.ManipulateButton
        android:id="@+id/endTimeDown"
        style="@style/up_down_button_style"
        android:layout_above="@+id/endTimeView"
        android:layout_alignRight="@+id/endTimeView"
        android:src="@drawable/minus_button" />

    <chokoapp.imanani.ManipulateButton
        android:id="@+id/endTimeUp"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_above="@+id/endTimeView"
        android:layout_toLeftOf="@+id/endTimeDown"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/plus_button" />

    <chokoapp.imanani.TimeView
        android:id="@+id/totalTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalTextView"
        android:layout_alignRight="@+id/endTimeView"
        android:padding="5dp"
        android:text="00:00:00"
        android:textSize="16dp" />

    <chokoapp.imanani.TimeView
        android:id="@+id/differenceTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/totalTimeView"
        android:layout_below="@+id/totalTimeView"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=" 00:00:00"
        android:textSize="16dp" />

</RelativeLayout>