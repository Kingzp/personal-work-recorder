<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/chokoapp.imanani"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/monthSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <chokoapp.imanani.MonthButton
            android:id="@+id/monthSelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app.dateformat="@string/monthformat"
            android:text="@string/select_month" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/monthly_summary_title" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/monthlySummarySum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/monthly_summary_sum_title" />

            <TextView
                android:id="@+id/monthlySummarySumView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/monthly_summary_sum_default_text"
                android:textSize="18dp" />

    </LinearLayout>
    <ListView
        android:id="@+id/monthlyWorkSummaryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>