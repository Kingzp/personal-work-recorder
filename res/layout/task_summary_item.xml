<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/codeViewOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="X01"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descriptionOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="XXXXXXXXXXXXXX"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:id="@+id/taskDurationOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="99:99:99"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/timePlusView"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/timeMinusView"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/minus" />

    </LinearLayout>

</LinearLayout>