<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/chokoapp.imanani"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/codeViewOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="X01"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descriptionOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="XXXXXXXXXXXXXX"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <chokoapp.imanani.TimeView
            android:id="@+id/taskDurationOnSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="99:99:99"
            android:textSize="24dp" />

        <chokoapp.imanani.ManipulateButton
            android:id="@+id/timePlusView"
            android:src="@drawable/plus_button"
            style="@style/up_down_button_style"
            android:layout_gravity="center_vertical" />

        <chokoapp.imanani.ManipulateButton
            android:id="@+id/timeMinusView"
            android:src="@drawable/minus_button"
            style="@style/up_down_button_style"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>